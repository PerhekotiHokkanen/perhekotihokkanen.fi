        <!--</p>-->
    </div>
</div>

<div class="row justify-content-md-center mb-120">
    {
        coworkers.map((member, key) => key ===0 || key === 1 ?
            <TeamItemMain
                name={member.name}
                photo={member.photo}
                position={member.position}
                hello={member.hello}
                intro={member.intro}
                delay={member.delay}
            /> : '')
    }
</div>




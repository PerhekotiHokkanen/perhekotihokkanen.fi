import coworkers from "./../data/team.json"
import TeamItemMain from "./TeamItemMain.astro";
---

<div class="row">
    <div class="text-center mb-80 mb-sm-50">
        <h2 class="section-title">Keit√§ olemme</h2>
        <!--<p class="section-title-descr">-->
